<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">

   <!-- 配置扫描 扫描的是controller层 -->
    <context:component-scan base-package="com.form1115.crm.controller,com.form1115.crm.expt" />
    <!-- 开启注解驱动 -->
    <mvc:annotation-driven />
    <!-- 配置属性文件 -->
    <context:property-placeholder location="classpath:db.properties" system-properties-mode="FALLBACK"/>
    <!-- 配置视图解析器 -->
    <bean id="internalResourceViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/views/" ></property>
        <property name="suffix" value=".html" ></property>
    </bean>
    <!-- 配置上传信息 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!-- 文件上传的编码 -->
        <property name="defaultEncoding" value="UTF-8"></property>
        <!-- 单个文件的上传大小 -->
        <property name="maxUploadSizePerFile" value="10485760" ></property>
        <!-- 总文件的上传大小 -->
        <property name="maxUploadSize" value="20485760"></property>
    </bean>

    <!-- 将头像文件上传的路径的bean交给Spring容器管理 -->
    <bean id="uploadBean" class="com.form1115.crm.common.UploadBean">
        <property name="baseUrl" value="${upload.baseUrl:upload}"></property>
    </bean>

</beans>